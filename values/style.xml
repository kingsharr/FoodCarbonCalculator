<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your app's theme attributes -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Other theme attributes -->
    </style>

    <style name="CustomSeekBar" parent="Widget.AppCompat.SeekBar">
        <!-- Customize the height of the thumb -->
        <item name="android:thumb">@drawable/custom_thumb</item>
        <!-- Customize the height of the SeekBar progress -->
        <item name="android:progressDrawable">@drawable/custom_seekbar_progress</item>
    </style>
    <style name="ShapeAppearanceOverlay.MyApp.FloatingActionButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>


</resources>
