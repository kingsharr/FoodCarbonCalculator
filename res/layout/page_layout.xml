<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- This is where you will later add your slider -->

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/header" />

    <TextView
        android:id="@+id/textViewOnImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imageView2"
        android:layout_marginTop="40dp"
        android:background="#00000000"
        android:gravity="center_horizontal|top"
        android:text="Carbon Reduction Tips"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <FrameLayout
        android:id="@+id/midContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/imageView2"
        android:layout_above="@+id/bottomNavigationView"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="@color/colorIcon"
        app:itemTextColor="@color/colorText"
        app:itemBackground="@color/colorBg"

        app:menu="@menu/menu" />

    <!--    android:theme="@style/BottomNavigationGreenTheme"-->


</RelativeLayout>
