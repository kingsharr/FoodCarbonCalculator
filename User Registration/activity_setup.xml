<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".SetupActivity">

    <EditText
        android:id="@+id/age_input"
        android:layout_width="307dp"
        android:layout_height="58dp"
        android:layout_marginTop="32dp"
        android:background="@color/backgroundColor"
        android:ems="10"
        android:hint="Age"
        android:inputType="number"
        android:textColorHint="@color/textHintColor"
        app:layout_constraintEnd_toEndOf="@+id/names_input"
        app:layout_constraintTop_toBottomOf="@+id/names_input" />

    <ImageView
        android:id="@+id/agebackground"
        android:layout_width="323dp"
        android:layout_height="58dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/names_input"
        app:layout_constraintStart_toStartOf="@+id/names_input"
        app:layout_constraintTop_toBottomOf="@+id/names_input"
        app:srcCompat="@drawable/input_bracket" />

    <EditText
        android:id="@+id/names_input"
        android:layout_width="323dp"
        android:layout_height="58dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/input_bracket"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/textHintColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/data_text" />

    <TextView
        android:id="@+id/data_text"
        android:layout_width="212dp"
        android:layout_height="55dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/input_bracket"
        android:gravity="center"
        android:text="User Data"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gender_text"
        android:layout_width="323dp"
        android:layout_height="58dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/input_bracket"
        android:gravity="center"
        android:text="   Gender"
        android:textAlignment="viewStart"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/age_input"
        app:layout_constraintStart_toStartOf="@+id/agebackground"
        app:layout_constraintTop_toBottomOf="@+id/age_input" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/gender_text"
        app:layout_constraintEnd_toEndOf="@+id/gender_text"
        app:layout_constraintStart_toStartOf="@+id/gender_text"
        app:layout_constraintTop_toTopOf="@+id/gender_text">

        <RadioButton
            android:id="@+id/radioButtonMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Male" />

        <RadioButton
            android:id="@+id/radioButtonFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Female" />
    </RadioGroup>

    <Spinner
        android:id="@+id/spinner_goals"
        android:layout_width="293dp"
        android:layout_height="48dp"
        android:background="@color/backgroundColor"
        app:layout_constraintBottom_toBottomOf="@+id/preference_text"
        app:layout_constraintEnd_toEndOf="@+id/preference_text"
        app:layout_constraintStart_toStartOf="@+id/preference_text"
        app:layout_constraintTop_toTopOf="@+id/preference_text"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/preference_text"
        android:layout_width="323dp"
        android:layout_height="58dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/input_bracket"
        app:layout_constraintEnd_toEndOf="@+id/gender_text"
        app:layout_constraintStart_toStartOf="@+id/gender_text"
        app:layout_constraintTop_toBottomOf="@+id/gender_text" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="120dp"
        android:layout_height="61dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="SUBMIT"
        android:textColor="@color/black"
        app:backgroundTint="@color/greenBlue"
        app:layout_constraintEnd_toEndOf="@+id/preference_text"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/preference_text"
        app:layout_constraintTop_toBottomOf="@+id/preference_text" />

</androidx.constraintlayout.widget.ConstraintLayout>