<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".ForumActivity">

    <TextView
        android:id="@+id/txtUserForum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Forum"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072" />

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="Back Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/arrow_left_fill"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/imgBeige"
        android:layout_width="match_parent"
        android:layout_height="610dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="-100dp"
        android:background="@drawable/container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUserForum"
        app:layout_constraintVertical_bias="0.266" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvForum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="200dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStartDisc"
        app:layout_constraintVertical_bias="0.055"
        tools:itemCount="10" />

    <TextView
        android:id="@+id/btnStartDisc"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:text="Start a discussion"
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingStart="30dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgBeige"
        app:layout_constraintVertical_bias="0.028" />

    <ImageView
        android:id="@+id/imgCreate"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnStartDisc"
        app:layout_constraintEnd_toEndOf="@+id/btnStartDisc"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="@+id/btnStartDisc"
        app:layout_constraintTop_toTopOf="@+id/btnStartDisc"
        app:layout_constraintVertical_bias="0.1"
        app:srcCompat="@drawable/create_black" />


</androidx.constraintlayout.widget.ConstraintLayout>