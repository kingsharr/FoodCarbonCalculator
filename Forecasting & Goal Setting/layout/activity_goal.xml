<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".GoalActivity">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="170dp"
        android:layout_height="64dp"
        android:text="Forecasting &amp; Goal Setting"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071" />

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:clickable="true"
        android:contentDescription="Back Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/arrow_left_fill" />

    <ImageView
        android:id="@+id/imgBeige"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_marginBottom="-100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt1"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/txtForecast"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/border"
        android:text="Keep going and you will reduce \n2% more carbon next year!"
        android:padding="12dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgBeige"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/txtGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your goals:"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtForecast"
        app:layout_constraintVertical_bias="0.04" />

    <TextView
        android:id="@+id/btnSetGoal"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:clickable="true"
        android:gravity="center"
        android:text="Add a new goal!"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:paddingLeft="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll"
        app:layout_constraintVertical_bias="0.9" />

    <ImageView
        android:id="@+id/imgCreate"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnSetGoal"
        app:layout_constraintEnd_toEndOf="@+id/btnSetGoal"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="@+id/btnSetGoal"
        app:layout_constraintTop_toTopOf="@+id/btnSetGoal"
        app:layout_constraintVertical_bias="0.1"
        app:srcCompat="@drawable/create_black" />

    <ImageView
        android:id="@+id/imgForecast"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/carbon"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="172dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtForecast"
        app:layout_constraintEnd_toEndOf="@+id/txtForecast"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintStart_toStartOf="@+id/txtForecast"
        app:layout_constraintTop_toTopOf="@+id/txtForecast"/>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:fadeScrollbars="false"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtForecast"
        app:layout_constraintVertical_bias="0.409">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/goalRecyclerView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgBeige"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtGoal"
            app:layout_constraintVertical_bias="0.05" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>