<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".FeedbackActivity">

    <TextView
        android:id="@+id/TVFeedback"
        android:layout_width="242dp"
        android:layout_height="55dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="85dp"
        android:background="@drawable/input_bracket"
        android:gravity="center"
        android:text="Review and Rating"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/SPReview"
        android:layout_width="293dp"
        android:layout_height="48dp"
        android:background="@color/backgroundColor"
        app:layout_constraintBottom_toBottomOf="@+id/TVChose"
        app:layout_constraintEnd_toEndOf="@+id/TVChose"
        app:layout_constraintStart_toStartOf="@+id/TVChose"
        app:layout_constraintTop_toTopOf="@+id/TVChose"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/TVChose"
        android:layout_width="323dp"
        android:layout_height="58dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/input_bracket"
        app:layout_constraintEnd_toEndOf="@+id/TVFeedback"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/TVFeedback"
        app:layout_constraintTop_toBottomOf="@+id/TVFeedback" />

    <RatingBar
        android:id="@+id/RateBarFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="@+id/TVChose"
        app:layout_constraintTop_toBottomOf="@+id/TVChose" />

    <TextView
        android:id="@+id/TVRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Your rating:"
        android:textColor="@android:color/holo_red_light"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/RateBarFeedback"
        app:layout_constraintTop_toBottomOf="@+id/RateBarFeedback" />

    <TextView
        android:id="@+id/TVReviewing"
        android:layout_width="125dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/input_bracket"
        android:gravity="center"
        android:text="Your review:"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/TVRating"
        app:layout_constraintTop_toBottomOf="@+id/TVRating" />

    <EditText
        android:id="@+id/ETFeedback"
        android:layout_width="322dp"
        android:layout_height="121dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="@+id/TVReviewing"
        app:layout_constraintTop_toBottomOf="@+id/TVReviewing" />

    <Button
        android:id="@+id/BtnFeedback"
        android:layout_width="120dp"
        android:layout_height="61dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="SUBMIT"
        android:textColor="@color/black"
        app:backgroundTint="@color/greenBlue"
        app:layout_constraintEnd_toEndOf="@+id/ETFeedback"
        app:layout_constraintStart_toStartOf="@+id/ETFeedback"
        app:layout_constraintTop_toBottomOf="@+id/ETFeedback" />

</androidx.constraintlayout.widget.ConstraintLayout>