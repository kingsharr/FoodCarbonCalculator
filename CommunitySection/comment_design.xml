<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/articleButton"
        android:layout_width="367dp"
        android:layout_height="98dp"
        android:background="#00000000"
        android:contentDescription="string"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06"
        app:srcCompat="@drawable/article" />

    <ImageButton
        android:id="@+id/forumButton"
        android:layout_width="367dp"
        android:layout_height="98dp"
        android:background="#00000000"
        android:contentDescription="string"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/articleButton"
        app:layout_constraintVertical_bias="0.164"
        app:srcCompat="@drawable/forum" />

    <ImageButton
        android:id="@+id/ratingButton"
        android:layout_width="367dp"
        android:layout_height="98dp"
        android:background="#00000000"
        android:contentDescription="string"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forumButton"
        app:layout_constraintVertical_bias="0.307"
        app:srcCompat="@drawable/review" />
</androidx.constraintlayout.widget.ConstraintLayout>