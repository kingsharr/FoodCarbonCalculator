<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="5dp">

    <HorizontalScrollView
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:background="@drawable/border"
        android:contentDescription="insights"
        android:fadeScrollbars="false"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:scrollbarStyle="outsideInset"
        android:scrollbarSize="10dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtInsight0"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:textSize="20dp"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:text="Average C02 emission this week:" />

            <TextView
                android:id="@+id/txtInsight1"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:text="0kg C02" />

        </LinearLayout>

            <ImageView
                android:id="@+id/imgEarth"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/earth"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/imgTree"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/tree"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/txtInsight2"
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:text="Saving 0 trees, equivalent to their annual CO2 absorption" />

            <ImageView
                android:id="@+id/imgEnergy"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/lightning"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/txtInsight3"
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:textAlignment="textStart"
                android:gravity="center"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:text="Saving 0kWh of energy"
                tools:ignore="RtlCompat" />

        </LinearLayout>
    </HorizontalScrollView>

</androidx.cardview.widget.CardView>